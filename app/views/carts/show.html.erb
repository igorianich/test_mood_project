<h1>Your Shopping Cart</h1>

<table>
  <thead>
  <tr>
    <th>Music Record</th>
    <th>Quantity</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @cart.cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.music_record.title %></td>
      <td><%= cart_item.quantity %></td>
      <td>
        <%= form_with url: remove_from_cart_cart_items_path(cart_item), method: :delete do |form| %>
          <%= form.submit 'Remove from Cart' %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>